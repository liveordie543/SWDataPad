                </div>
            </div>
            <div>
                <div class="cell1">
                    @Html.LabelFor(model => model.Credits)
                </div>
                <div class="cell2">
                    @Html.TextBoxFor(model => model.Credits)
                    @Html.ValidationMessageFor(model => model.Credits)
                </div>
