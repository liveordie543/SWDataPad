@model SWDataPad.Models.Character.CreateCharacterModel

@{
    ViewBag.Title = "Create Character";
    Layout = "~/Views/Shared/_BlankLayout.cshtml";
}


<div class="create_char_title">
    Create Character
    <a class="sign_out_no_char" href="@Url.Action("LogOut", "Login")">Sign Out</a>
</div>
