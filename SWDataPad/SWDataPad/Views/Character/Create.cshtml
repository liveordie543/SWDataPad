            </div>
            <div>
                <div class="cell1">
                    @Html.LabelFor(model => model.Species)
                </div>
                <div class="cell2">
                    @Html.TextBoxFor(model => model.Species)
                    @Html.ValidationMessageFor(model => model.Species)
                </div>
            </div>
            <div>
                <div class="cell1">
                    @Html.LabelFor(model => model.Level)
                </div>
                <div class="cell2">
                    @Html.TextBoxFor(model => model.Level)
                    @Html.ValidationMessageFor(model => model.Level)
                </div>
            </div>
            <div>
                <div class="cell1">
                    @Html.LabelFor(model => model.Age)
                </div>
                <div class="cell2">
